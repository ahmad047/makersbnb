<head>
  <style>
    background-colour: black;


  </style>
</head>

<body>
  

  <% if @user.nil? %>
      <h3>Please sign in/sign up to book a property</h3>
    <% else %>
      <h3>Welcome <%=@user.name.upcase%></h3>
  <%end%>

  <form action='/space/new' method='get'>
    <input type='submit' class='button button1' name='become_a_host' value='Become a host'>
  </form>

  <br>

  <form action='/user/new' method='get'>
    <input type='submit' class='button button2' name='sign_up' value='Sign up'>
  </form>

  <% unless @user %>  
    <form action='/user/sign_in' method='get'>
      <input type='submit' class='button button3' name='sign_in' value='Sign in'>
    </form>
  <% end %>
  <form action='/user/sign_out' method='post'>
    <input type='submit' class='button button5' name='sign_out' value='Sign out'>
  </form>


  <ul>
    <% unless @result_db.nil? %>
      <% @result_db.each do |space| %>
        <%=space.name.upcase%><br>
        <%=space.description.capitalize%><br>
        <%=space.price_per_night%> per night<br>
        <br>
        <form action="/space/<%= space.id %>" method='post'>
          <input type='hidden' name='_method' value='PATCH'>
          <input type='submit' name='Book' value='Book' class='button button6'>
        </form>
        <br>
        <br>
      <% end %>
    <% end %>
  </ul>
</body>

